{
  "name": "@ch2ts/cli",
  "version": "0.0.0",
  "description": "CLI entrypoint for ClickHouse â†’ TypeScript typegen",
  "type": "module",
  "bin": {
    "subsquid-ch2ts": "./dist/index.cjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@ch2ts/core": "workspace:*",
    "@ch2ts/presets": "workspace:*",
    "commander": "^11.1.0",
    "chokidar": "^3.6.0"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=18"
  },
  "tsup": {
    "entry": ["src/index.ts"],
    "format": ["esm", "cjs"],
    "dts": false,
    "sourcemap": true,
    "clean": true,
    "outDir": "dist",
    "external": ["@ch2ts/core", "@ch2ts/presets"],
    "banner": { "js": "#!/usr/bin/env node" }
  }
}
